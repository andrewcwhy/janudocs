{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "bundler",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "declaration": true,
        "declarationDir": "./dist"
    },
    "exclude": ["node_modules"]
}
